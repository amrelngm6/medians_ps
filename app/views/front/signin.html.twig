{% include 'views/front/includes/head.html.twig' %}
<section class="sigin__page bg__white">
   <div class="container">
      <div class="signin__wrapper">
         <div class="row justify-content-between align-items-center">
            <div class="col-lg-6">
               <div class="signin__content__left">
                  <div class="signin__head">
                     <h3>
                        Lets's Get Started!
                     </h3>
                     <p class="accout">
                        Create new account? <a href="/signup"><b>Signup</b></a>
                     </p>
                  </div>
                  <form action="/login" method="POST" id="signup-form">
                     <div class="row g-4">
                        <div class="col-lg-12">
                           <div class="form__grp">
                              <label for="emailid">{{lang.__('Email')}}</label>
                              <input name="params[email]"  type="email" id="emailid" placeholder="Enter Your Email..." required>
                           </div>
                        </div>
                        <div class="col-lg-12">
                           <div class="form__grp">
                              <label for="paswords">Enter Your Password</label>
                              <input name="params[password]" minlength="5" type="text" id="paswords" placeholder="Enter Your Password..." required>
                           </div>
                        </div>
                     </div>
                     <p style="padding-top: 15px;">
                        <button type="submit" class="cmn--btn">
                           <span>
                              Login
                           </span>
                        </button>
                        <a href="/" class="danger" style="padding: 10px; ">
                           <span>Back home</span>
                        </a>
                     </p>
                     <hr />
                     <p style="padding-top: 15px;">
                        <a href="{{google_login}}" class="danger" style="padding: 10px; ">
                           <span>Login with Google</span>
                        </a>
                     </p>
                  </form>
               </div>
            </div>
            <div class="col-lg-5">
               <div class="signin__thumb">
                  <img src="/src/front_assets/img/wepik-export-20230526231330BFpe.webp" alt="signin">
               </div>
            </div>
         </div>
      </div>
   </div>
</section>

   


