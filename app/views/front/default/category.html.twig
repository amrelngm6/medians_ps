{% include 'views/front/default/includes/header.html.twig' %}
{% include 'views/front/default/includes/navbar.html.twig' %}

    <div class="w-full py-2 cyan-bg relative ">
        <div class="w-full overflow-hidden h-full cyan-bg absolute top-0 left-0">
            <img loading="lazy" alt="{{lang.translate('SPECIALIZATIONS')}}" alt="{{app.sitename}}" src="/stream?image=/uploads/img/light-network.webp" class="absolute left-0 top-0 w-full" style="opacity: .3;" />
            <img loading="lazy" alt="{{lang.translate('SPECIALIZATIONS')}}" src="/stream?image=/uploads/img/circles-bg.webp" class="absolute left-0 bottom-0 w-full" style="opacity: .3;" />
        </div>
        <div class="container mx-auto relative px-1 lg:pt-10 ">
            <p class="text-sm lg:pb-2 flex gap-2 font-bold text-gray-600 mt-20">
            <a class="purple-color" href="/">{{lang.translate('homepage')}} </a> | 
            <a class="purple-color" href="/blog">{{lang.translate('Blog')}} </a> | 
            <span class="purple-color">{{item.title}}</span></p>

            <div class="mx-auto w-full relative z-10 mb-8 ">
                <div class="relative top-0  left-0 right-0 px-0 pt-2 pb-6  ">
                    <div class="lg:flex block w-full  gap-3 gap">
                        <div class="lg:w-8/12 w-full bg-white border-1 border border-gray-100 rounded-lg px-4">
                            <h1 class="text-xl purple-color font-bold mb-4">{{item.title}} </h1>
                            <hr class="pb-2" />

                            {% for similar_item in items %}
                            <div class="blog-main-item lg:flex block w-full">
                                <div class="blog-item-img lg:w-3/12">
                                    <a  href="/{{similar_item.content.prefix}}"><img  src="/stream?image={{similar_item.picture}}" class="rounded-lg w-full py-4 lg:py-6"></a>
                                </div>
                                <div class="blog-item-content lg:w-9/12">
                                    <div class="py-2 lg:py-6 lg:pr-6 lg:px-10 px-2">

                                        <a href="/{{similar_item.content.prefix}}" class="pt-2 block  font-semibold text-sm cyan-color">{{similar_item.content.updated_at | date('Y-m-d')}}</a>
                                        <a href="/{{similar_item.content.prefix}}" class="lg:py-4 py-2 block font-bold purple-color lg:text-xl md:text-lg text-base">{{similar_item.content.title}}</a>
                                        <p class=" font-semibold text-gray-600 lg:text-base text-sm">{{similar_item.content.content |striptags|slice(0, 140)|raw }}</p>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                            <hr class="pb-2" />
                            {% if pages|length %}
                            <div class="py-4 flex mx-auto text-center w-96">
                                <span class="w-full"></span>
                                {% for page in pages %}
                                    {% if loop.index == current_page %} 
                                    <span class="p-4 text-center font-bold cyan-color">{{loop.index}}</span> 
                                    {% else %} 
                                    <a href="?page={{loop.index}}" class="p-4 text-center text-gray-600 font-semibold ">{{loop.index}}</a> 
                                    {% endif %} 
                                {% endfor %}
                                <span class="w-full"></span>
                            </div>
                            {% endif %}
                        </div>
                        <div class="w-full lg:w-4/12" id="app">
                            
                            {% include 'views/front/default/side_specializations.html.twig' %}

                            {% include 'views/front/default/side_similar_items.html.twig' %}
                            
                            {% include 'views/front/default/side_success_stories.html.twig' %}
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="relative w-full overflow-hidden px-1">
        <img loading="lazy"  alt="{{lang.translate('SPECIALIZATIONS')}}" src="/stream?image=/uploads/img/circles-bg.webp" class="absolute left-0 top-0 w-full" style="opacity: 0.05;" />
        <div class="container mx-auto relative z-10">
            {% include 'views/front/default/side_specs_similar_items.html.twig' %}
        </div>
    </div>

{% include 'views/front/default/includes/footer.html.twig' %}
