
                {% for item in all_stories | sort((a, b) => a.field.sort <=> b.field.sort)  %}
                <div class=" relative custom-scroll-item mb-20 ">
                    <div data-youtube-link="{{item.field.video_link}}" class="cursor-pointer play-icon absolute z-10 right-0 left-0 top-0 w-12 rounded-full border-4 border border-white mx-auto bg-white show-modal-iframe">
                        <img loading="lazy" class="" src="/stream?image=/uploads/img/play-button_ex.webp">
                    </div>
                    <div class="relative rounded-tl-2xl rounded-br-2xl m-6 cyan-gradient-vertical p-10">
                        <div class="mb-4 text-white font-semibold custom-scroll h-32 p-2 overflow-auto">
                            <p>{{item.content.content|raw}}</p>
                        </div>
                        <div style="bottom: -95px;" class="w-full absolute right-0 left-0 bottom-0 w-30  mx-auto">
                            <div class="rounded-full border-4 border border-white  bg-white w-28 mx-auto">
                                <img loading="lazy" alt="{{item.content.title}}" class="w-28 h-28 rounded-full" src="/stream?thumbnail=150&image={{item.picture}}">
                            </div>
                            <a class="block mx-auto text-center w-64 font-semibold" href="#!"><span>{{lang.translate('lang') == 'english' ? item.field.short_name : item.field.short_name_ar}}</span></a>
                        </div>
                    </div>
                </div>

                {% endfor %}