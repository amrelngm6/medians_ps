
                {% if all_stories  %}
                {% for item in all_stories | sort((a, b) => a.field.sort <=> b.field.sort)  %}
                {% if loop.index < 4  %}
                <div class=" relative custom-scroll-item">
                    <div class="show-modal-iframe play-icon absolute z-10 cursor-pointer right-0 left-0 top-0 w-12 rounded-full border-4 border border-white mx-auto bg-white" data-youtube-link="{{item.field.video_link}}">
                        <img loading="lazy" alt="{{app.Settings['sitename']}}" width="46" height="46" src="/stream?image=/uploads/img/play-button_ex.webp"  />
                    </div>
                    <div class="relative rounded-tl-2xl rounded-br-2xl m-6 cyan-gradient-vertical p-10">
                        <div class="mb-4 text-white font-semibold custom-scroll h-32 p-2 overflow-auto">
                            <p>{{item.content.content|raw}}</p>
                        </div>
                        <div style="bottom: -95px;" class="w-full absolute right-0 left-0 bottom-0 w-30  mx-auto">
                            <div data-youtube-link="{{item.field.video_link}}" class="rounded-full border-4 border border-white  bg-white w-28 mx-auto show-modal-iframe ">
                                <img loading="lazy" alt="{{lang.translate('lang') == 'arabic' ? item.field.short_name_ar :  item.field.short_name}}" src="/app/image.php?w=110&h=110&src={{item.thumbnail()}}" class="w-28 h-28 rounded-full" />
                            </div>
                            <a data-youtube-link="{{item.field.video_link}}" class="show-modal-iframe block mx-auto text-center w-64 font-semibold purple-color" href="javascript:;"><span>{{lang.translate('lang') == 'arabic' ? item.field.short_name_ar :  item.field.short_name}}</span></a>
                        </div>
                    </div>
                </div>
                {% endif %}
                {% endfor %}
                {% endif %}