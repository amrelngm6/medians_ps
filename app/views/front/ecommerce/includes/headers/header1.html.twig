<header class="topnav">
  <div class="container">
    <div class="header-bar">
      <a href="/"><img width="150" src="{{app.SystemSetting.logo}}" alt="logo"></a>
        <nav class="navbar">
          <ul class="navbar-links">
            {% for menu in header_menu %}
            <li class="navbar-dropdown">
                <a href="/{{menu.page.content.prefix}}">{{menu.page.name}}</a>
            </li>
            {% endfor %}
          </ul>
        </nav>
        <div class="pickup gap-4">
            <div class="menu-icon cursor-pointer">
                <span class="text"><span class="word">Menu</span></span>
                <span class="icon">
                    <i></i>
                    <i></i>
                </span>
            </div>
            <a href="/login" class="btn">{{lang.translate('Login')}}</a>
        </div>
        
        <div class="bar-menu">
          <i class="fa-solid fa-bars"></i>
        </div>
    </div>
    <div class="mobile-nav hmburger-menu" id="mobile-nav" style="display:block; background-image: url(/uploads/img/background.png);">
      <div class="res-log">
        <a href="/">
          <img src="{{app.SystemSetting.logo}}" alt="{{app.SystemSetting.sitename}}">
        </a>
      </div>
        <ul>
          {% for menu in header_menu %}
          <li><a href="/{{menu.page.content.prefix}}">{{menu.page.name}}</a></li>
          {% endfor %}

        </ul>

        <div class="menu-sidebar-single-widget">
            <h5 class="menu-sidebar-title">{{lang.translate('Contact Info')}}</h5>
            <div class="header-contact-info">
              <span><i class="fa-solid fa-location-dot"></i>{{app.SystemSetting.footer_address}}</span>
              <span>
                <a href="mailto:{{app.SystemSetting.footer_email}}">
                  <i class="fa-solid fa-envelope"></i>{{app.SystemSetting.footer_email}}
                </a>
              </span>
              <span><a href="callto:{{app.SystemSetting.footer_phone}}"><i class="fa-solid fa-phone"></i>{{app.SystemSetting.footer_phone}}</a></span>
            </div>
            <div class="social-profile">
              <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
              <a href="#"><i class="fa-brands fa-twitter"></i></a>
              <a href="#"><i class="fa-brands fa-linkedin-in"></i></a>
              <a href="#"><i class="fa-brands fa-youtube"></i></a>
            </div>
          </div>

          <a href="JavaScript:void(0)" id="res-cross"><i class="fa-regular fa-circle-xmark"></i></a>
    </div>
  </div>
  <div class="hamenu valign">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 valign">
                    <div class="cont-info two">
                        <div class="about-compeny bottom">
                            <img src="{{app.SystemSetting.logo}}" alt="about-immg">
                            <h4>{{app.SystemSetting.sitename}}</h4>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 valign">
                    <div class="cont-info">
                        <div class="item mb-50">
                            <h6 class="text-u fw-600 mb-20">{{lans.translate('Location')}}</h6>
                            <p class="fw-400 fz-18">{{app.SystemSetting.footer_address}}</p>
                        </div>
                        <div class="item mb-50">
                            <h6 class="text-u fw-600 mb-20">{{lans.translate('HOW TO CONNECT')}}</h6>
                            <p class="fw-400 fz-18"><a href="callto:{{app.SystemSetting.footer_phone}}">{{app.SystemSetting.footer_phone}}</a></p>
                            <p class="fw-400 fz-18"><a href="mailto:{{app.SystemSetting.footer_email}}">{{app.SystemSetting.footer_email}}</a></p>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
