{% include 'views/front/' ~ template ~ '/includes/head.html.twig' %}
{% include 'views/front/' ~ template ~ '/includes/header.html.twig' %}
{% include 'views/front/' ~ template ~ '/blocks/breadcrumb.html.twig' %}

            <main>
                <!--  Start login  -->
                <section class="tc-login p-5 radius-4 bg-white mt-3 mb-3">
                    <div class="row align-items-center justify-content-around">
                        <div class="col-lg-4">
                            <div class="img">
                                <img src="/uploads/img/login.svg" alt="">
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="login-form">
                                <div class="title mb-30">
                                    <h3 class="color-green2 mb-10"> {{lang.translate('Confirm Email address')}} </h3>
                                    <p class="fsz-14 text-uppercase ltspc-2 color-999"> {{lang.translate('Please check your email address to find the activation code')}} </p>
                                </div>
                                <form action="/customer/confirm" method="POST" id="login-form" class="ajax-form  d-block">
                                    <div class="form-group mb-4">
                                        <label for=""> {{lang.translate('Code')}}</label>
                                        <input type="text" class="form-control" required name="params[code]"  placeholder="{{lang.translate('* * * * * *')}}">
                                    </div>
                                    <div class="btns">
                                        <button type="submit" class="butn bg-cyan2 text-white radius-4 fw-500 fsz-14 text-uppercase text-center mt-40 px-5"> <span> {{lang.translate('Activate account')}} </span> </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </section>
                <!--  End login  -->
            </main>
           
<!-- Footer -->
{% include 'views/front/' ~ template ~ '/includes/footer.html.twig' %}
{% include 'views/front/' ~ template ~ '/includes/footer_assets.html.twig' %}
</body>
</html>