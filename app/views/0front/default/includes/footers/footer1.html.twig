
<footer style="background-image: url(/uploads/img/footer.jpg);">
    <div class="container">
        <div class="row align-items-center pb">
        {% if app.SystemSetting.show_newsletter_form %}
            <div class="col-lg-6">
                <div class="subscribe-text">
                    <img src="/uploads/img/subscribe-icon.png" alt="subscribe-icon">
                    <div>
                        <h2>{{lang.translate('Sign up to our newsletter')}}</h2>
                        <p >{{lang.translate('get recent content and updates')}}.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <form class="subscribe" action="/api/create">

                    <input type="hidden" name="type" value="NewsletterSubscriber.create">
                    <input type="email" name="params[email]" required="true" placeholder="{{lang.translate('Enter Your Email Address')}}...">
                    <button class="btn">{{lang.translate('Subscribe')}}</button>
                </form>
            </div>
        {% endif %}
        </div>
        <div class="row">
            <div class="col-lg-6">
                <a class="relative pb-4" href="/"><img width="150" src="{{app.SystemSetting.logo}}" alt="logo"></a>
                <div class="information">
                    <span>Drop us an email</span>
                    <a href="mailto:{{app.SystemSetting.footer_email}}">{{app.SystemSetting.footer_email}}</a>
                    <div class="d-flex">   
                        <i class="fa-solid fa-location-dot"></i>
                        <h6>{{app.SystemSetting.footer_address}}</h6>
                    </div>
                    <ul class="social-icon">
                        {% if app.SystemSetting.facebook_link %}<li><a href="{{app.SystemSetting.facebook_link}}"><i class="fa-brands fa-facebook-f"></i></a></li>{% endif %}
                        {% if app.SystemSetting.twitter_link %}<li><a href="{{app.SystemSetting.twitter_link}}"><i class="fa-brands fa-twitter"></i></a></li>{% endif %}
                        {% if app.SystemSetting.youtube_link %}<li><a href="{{app.SystemSetting.youtube_link}}"><i class="fa-brands fa-youtube"></i></a></li>{% endif %}
                        {% if app.SystemSetting.instagram_link %}<li><a href="{{app.SystemSetting.instagram_link}}"><i class="fa-brands fa-instagram"></i></a></li>{% endif %}
                    </ul>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="footer-links">
                  <h3>What We Do</h3>
                  <div class="boder"></div>
                    <ul>
                      {% for menu in footer_menu1 %}
                      <li><i class="fa-solid fa-angle-right"></i><a href="/page/{{menu.page.content.prefix}}">{{menu.page.name}}</a></li>
                      {% endfor %}
                    </ul>
                  </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="footer-links">
                  <h3>useful links</h3>
                  <div class="boder"></div>
                    <ul>
                      {% for menu in footer_menu2 %}
                      <li><i class="fa-solid fa-angle-right"></i><a href="/page/{{menu.page.content.prefix}}">{{menu.page.name}}</a></li>
                      {% endfor %}
                    </ul>
                  </div>
            </div>
        </div>
        {% set currentDate = date() %}
        <div class="copyrights relative">
            <div class="d-flex align-items-center">
                <div class="boder"></div>
                <span>Phone No.  <a href="callto:{{app.SystemSetting.footer_phone}}">{{app.SystemSetting.footer_phone}}</a></span>
            </div>
            <p>Copyright Â© <a href="#">{{app.SystemSetting.sitename}}</a> {{currentDate|date('Y')}}. All Rights Reserved.</p>
        </div>
    </div>
    <img src="/uploads/img/dots-shaps.png" alt="dots-shaps" class="dots-shaps">
    <img src="/uploads/img/shaps-1.png" alt="dots-shaps" class="shaps-1">
</footer>