<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="viewport-fit=cover, width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>{{app.Settings.sitename}}</title>
    <link href="/dist/css/app.css" rel="stylesheet" type="text/css" >
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp|Cairo:wght@300;500;700;900">
    <script type="text/javascript">
        var enable_debug = {{app.Settings.enable_debug ? 1 : 0}};
    </script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> -->
</head>

<body style="direction: {{lang.__('dir')}};" class="{{lang.__('dir')}}">
    <canvas id="myChart" width="400" height="400"></canvas>
    <div id="app">
    {% include 'views/admin/includes/nodata.html.twig' %}    
    </div>

    <div>            
        <div id="root-parent"  
        data-status="{{app.request().get('load')}}"
        data-page="{{app.request().requestUri|slice(1)}}"
        data-menu="{{app.menu()|json_encode}}"
        data-auth="{{app.auth|json_encode}}"
        data-lang="{{lang.vueLang()|json_encode}}"
        data-setting="{{app.Settings|json_encode}}"
        data-conf="{{app.CONF|json_encode}}"
        data-types-list="{{typesList|json_encode}}"
        ></div>

    </div>
                 
    <style type="text/css">
        .text-default{ text-align:  {{app.Settings.lang == 'arabic' ? 'right' : 'left'}} }
    </style>

    <script type="text/javascript" src="/dist/js/app.js"></script>
    <script src="https://html2canvas.hertzen.com/dist/html2canvas.min.js"></script>
    <script type="text/javascript">
        // Sample data
const data = {
  labels: ['Red', 'Blue', 'Yellow'],
  datasets: [{
    label: 'My First Dataset',
    data: [300, 50, 100],
    backgroundColor: [
      'rgb(255, 99, 132)',
      'rgb(54, 162, 235)',
      'rgb(255, 205, 86)'
    ],
    hoverOffset: 4
  }]
};

// Chart configuration
const config = {
  type: 'pie',
  data: data,
};

// Create the chart
const myChart = new Chart(
  document.getElementById('myChart'),
  config
);
    </script>
</body>
</html>
