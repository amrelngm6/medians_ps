<!DOCTYPE html>
<html dir="{{lang.__('dir')}}">

<head>


    <meta name="viewport" content="viewport-fit=cover, width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>{{app.Settings.sitename}}</title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp|Tajawal|Montserrat|Roboto:wght@300;400;500|Cairo:wght@300;500;700;900|Saira:wght@300;500;700;900">

    <script type="text/javascript">
    var enable_debug = {{ app.Settings.enable_debug ? 1 : '0' }};
    </script>

    <link rel="stylesheet" crossorigin href="/src/assets/webfonts/fontawesome.min.css">
    <link rel="stylesheet" crossorigin href="/dist/assets/index.min.css">
    <script type="module" crossorigin src="/dist/assets/index.min.js"></script>

</head>

<body style="direction: {{lang.__('dir')}};" class="{{lang.__('dir')}}">
    
    <div id="app" class="w-full p-0 block">
        {% include 'views/admin/nodata.html.twig' %}
    </div>
    
    <div id="root-parent"
        data-status="{{app.request().get('load')}}"
        data-page="{{app.request().requestUri|slice(1)}}"
        data-menu="{{app.menu()|json_encode}}"
        data-auth="{{app.auth|json_encode}}"
        data-lang="{{lang.vueLang()|json_encode}}"
        data-setting="{{app.SystemSetting|json_encode}}"
        data-system_setting="{{app.SystemSetting|json_encode}}"
        data-conf="{{app.CONF|json_encode}}"
        data-active-tab="{{component}}"
        data-component="{{component}}"
        data-types-list="{{typesList|json_encode}}"
    ></div>
    

    <style type="text/css">
    body .text-default {
        text-align: {{app.lang=='english' ? 'left': 'right'}}
    }
    body , h1, h2, h3, h4, h5, h6
    {
        font-family: {{app.lang=='english' ? 'Saira': 'Cairo'}};
    }

.active-booking-flash {
    -webkit-animation-name: move;
    animation-name: move;
    animation-duration:10s;
    animation-delay:1s;
    -webkit-animation-timing-function: linear;
    -webkit-animation-iteration-count: infinite;
    animation-iteration-count: infinite;
    -webkit-animation-fill-mode: both;
    animation-fill-mode: both;
}

@keyframes move{
  0% { opacity: 0;}
  5% { opacity: 1;}
  10% { opacity: 0;}
  15% { opacity: 1;}
  20% { opacity: 0;}
  25% { opacity: 1;}
 }
    </style>
    {# <script type="text/javascript" src="/dist/js/app.js"></script> #}


    <script src="https://html2canvas.hertzen.com/dist/html2canvas.min.js"></script>
</body>

</html>