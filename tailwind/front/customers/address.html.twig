{% include 'views/includes/header.html.twig' %}
<div class="bg-gray-50">
    <div class="container">

        <!-- END: Top Bar -->
        <div class="grid grid-cols-12 gap-6"  style="direction:rtl">

            <div class="col-span-12 lg:col-span-9 2xl:col-span-10" style="direction:ltr">
                <!-- BEGIN: Personal Information -->
                <div class="intro-y box bg-white">
                    <div class="flex items-center p-4 pb-4 border-b border-slate-200/60 dark:border-darkmode-400">
                        <h2 class="font-medium text-base pt-6  mr-auto">{{app.Lang.LOCATIONS}}</h2>
                    </div>
                    <div class="p-4 py-2">
                        
                        <form class="flex-1 mt-0 front-form" action="{{app.CONF.url}}customer" method="POST">
                            <input type="hidden" name="type" value="editAddress">
                            <div class="grid grid-cols-12 gap-x-5">
                                
                                <div class="col-span-12 2xl:col-span-6">
                                    <div class=" 2xl:mt-0">
                                        <label for="update-profile-form-3" class="form-label">{{app.Lang.CITY}}</label>
                                        {% set cities = app.Setting.cities|split(',') %}
                                        <select name="data[city]" id="update-profile-form-3" data-search="true" class="border-1 border  p-3 tom-select w-full">
                                            {% for city in cities %}
                                            <option {%  if (city == app.Customer.city) %} selected {% endif %} value="{{city}}">{{city}}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                                <div class="col-span-12 2xl:col-span-12">
                                    <div class="col-span-12">
                                        <div class="mt-10">
                                            <label for="update-profile-form-5" class="form-label">{{app.Lang.ADDRESS}}</label>
                                            <textarea name="data[address]" id="update-profile-form-5" class="form-control" placeholder="{{app.Lang.ADDRESS}}">{{app.Customer.address}}</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary text-center mt-4">Save</button>
                            <a href="" class="mt-10 text-danger float-right items-center">
                                <i data-feather="trash-2" class="w-4 h-4 mr-1"></i> Delete Account
                            </a>
                        </form>
                    </div>
                </div>
                <!-- END: Personal Information -->
            </div>
            {% include 'views/front/customers/sidemenu.html.twig' %}
        </div>
</div>
{% include 'views/includes/footer.html.twig' %}